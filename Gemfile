source "http://rubygems.org"

# for knife and gang
gem 'chef'
# for fetching and resolving cookbooks
gem 'librarian'
# for mapping out your infrastructure
gem 'spiceweasel', :git => 'https://github.com/cjAdvertising/spiceweasel.git', :ref => 'knife-server'

# create and manage chef servers
gem 'knife-server', :git => 'https://github.com/cjAdvertising/knife-server.git', :ref => 'ssh-identity'
# amazon ec2 knife plugin
gem 'knife-ec2'
# diffs the cookbook versions of two or more environments
gem 'knife-env-diff'
# displays role hierarchies
gem 'knife-crawl'

# you just need this everywhere
gem 'pry'

# Vagrant for local testing
gem 'vagrant', '~> 1.0.5'

# Vagrant Hostmaster for VM /etc/hosts management
gem 'vagrant-hostmaster'
gem 'vagrant-vbguest'

# List Ubuntu EC2 AMIs from knife
gem 'ubuntu_ami'